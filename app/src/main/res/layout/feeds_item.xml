<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp"
    android:outlineAmbientShadowColor="@color/bhagwa"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/feeds_img"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ram_mandir_modified" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Feeds_Heading"
                    android:paddingEnd="20dp"
                    android:textStyle="bold"
                    android:text="Heading jhbhbubuybxexe xyiyivgvvhy  h v"
                    android:textColor="@color/black"
                    android:padding="5dp"

                    android:background="@color/yellow"
                    android:fontFamily="@font/andada"
                    android:textSize="21dp"/>

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/speaker"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="2dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/megaphone"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    />


            </RelativeLayout>

            <TextView
                android:id="@+id/feeds_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/andada"
                android:padding="5dp"
                android:background="@color/yellow"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="this is the fact"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp" />




        </LinearLayout>

        <ImageView
            android:id="@+id/feeds_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:src="@drawable/share" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>